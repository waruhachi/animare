{
	"$schema": "../gen/schemas/desktop-schema.json",
	"identifier": "desktop",
	"windows": [
		"main"
	],
	"platforms": [
		"macOS",
		"windows",
		"linux"
	],
	"permissions": [
		"core:default",
		"store:default",
		"opener:default",
		"updater:default",
		"deep-link:default",
		"stronghold:default",
		"core:app:allow-set-app-theme",
		"core:window:allow-start-dragging",
		{
			"identifier": "http:default",
			"allow": [
				{
					"url": "https://graphql.anilist.co/"
				}
			]
		}
	]
}