{
	"compilerOptions": {
		"composite": true,
		"skipLibCheck": true,
		"module": "ESNext",
		"moduleResolution": "bundler",
		"allowSyntheticDefaultImports": true,
		/* shadcn */
		"baseUrl": ".",
		"paths": {
			"@/*": [
				"./src/*"
			],
			"@api/*": [
				"./src/api/*"
			],
			"@graphql/*": [
				"./src/graphql/*"
			],
			"@lib/*": [
				"./src/lib/*"
			],
			"@types/*": [
				"./src/types/*"
			],
			"@hooks/*": [
				"./src/hooks/*"
			],
			"@context/*": [
				"./src/context/*"
			],
			"@provider/*": [
				"./src/provider/*"
			],
			"@components/*": [
				"./src/components/*"
			],
			"@ui/*": [
				"./src/components/ui/*"
			],
			"@icons/*": [
				"./src/components/icons/*"
			],
		}
	},
	"include": [
		"vite.config.ts"
	]
}